pipeline {
    agent any

    tools {
        nodejs 'Node18'
    }

    parameters {
        string(name: 'URL', description: 'URL to open')
        string(name: 'TEXT', description: 'text to verify')
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm ci'
                sh 'npx playwright install --with-deps'
            }
        }

        stage('Run Playwright Tests') {
            steps {
                sh """
                  URL='${params.URL}' \
                  npx playwright test
                """
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: 'test-results/**', allowEmptyArchive: true
            archiveArtifacts artifacts: 'playwright-report/**', allowEmptyArchive: true
        }
    }
}
